<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report theme - STANDARD, DARK -->
        <theme>STANDARD</theme>

        <!-- Document encoding, defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- Protocol for script and stylesheets - HTTP, HTTPS -->
        <protocol>HTTPS</protocol>

        <!-- Title of the document -->
        <documentTitle>Odoo Sales Module Test Report</documentTitle>

        <!-- Name of the report -->
        <reportName>Sales Master Data Automation Test Results</reportName>

        <!-- Timestamp format -->
        <timeStampFormat>MMM dd, yyyy HH:mm:ss</timeStampFormat>

        <!-- Custom CSS -->
        <css>
            .test-detail {
                border: 1px solid #ddd;
            }
        </css>

        <!-- Custom JS -->
        <js>
        </js>
    </configuration>
</extentreports>

